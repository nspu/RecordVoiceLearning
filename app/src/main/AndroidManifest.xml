<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.nspu.dev.recordvoicelearning">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="fr.nspu.dev.recordvoicelearning.RecordVoiceLearning"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="fr.nspu.dev.recordvoicelearning.view.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="fr.nspu.dev.recordvoicelearning.view.activity.RecordActivity" />
        <activity
            android:name="fr.nspu.dev.recordvoicelearning.view.activity.ListenPeersActivity"
            android:label="@string/title_activity_listen_peers"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="fr.nspu.dev.recordvoicelearning.view.activity.SettingsActivity"
            android:label="@string/title_activity_folder_settings"></activity>
    </application>

</manifest>